<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

  <%= form_for @message, html: {class: "form-horizontal"} do |f| %>
    <div class="row">
      <div class="col-md-3">
        <label for="inputName">名前:</label>
        <%= f.text_area :name, class: "form-control", id: "inputName", :placeholder => "名前を入力してね", :rows => 2, :cols => 25 %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <label for="inputBody">内容:</label>
        <%= f.text_area :body, class: "form-control", id: "inputBody", :placeholder => "内容を入力してね", :rows => 2, :cols => 25 %>
      </div>
    </div>
  
  <%= f.submit %>
<% end %>
