<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<form class="form-inline">
  <%= form_for @message do |f| %>
    <div class="form-group">
      <label for="inputName">名前:</label>
      <%= f.text_area :name, class: "form-control", id: "inputName", :placeholder => "名前を入力してね", :rows => 1 %>
    </div>
    <div class="form-group">
      <label for="inputBody">内容:</label>
      <%= f.text_area :body, class: "form-control", id: "inputBody", :placeholder => "内容を入力してね", :rows => 1 %>
    </div>
  
  <%= f.submit %>
</form>
<% end %>
