<%= form_for @message, html: {class: "form-horizontal"} do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
    <% end %>  

    <div class="form-group">
        <label for="inputName" class= "col-md-2 control-label">名前:</label>
        <div class="col-md-10">
          <%= f.text_field :name, :class => "form-control", id: "inputName", :placeholder => "名前を入力してね"%>
        </div>
    </div>

    <div class="form-group">
        <label for="inputBody" class="col-md-2 control-label">内容:</label>
        <div class="col-md-10">
          <%= f.text_area :body, class: "form-control", id: "inputBody", :placeholder => "内容を入力してね", :rows => 3 %>
        </div>
    </div>
    
  <div class="text-center">
      <%= f.submit "投稿", class: "btn btn-default btn-success" %>
  </div>
<% end %>